title = {Multimodal Recognition of Personality Traits in Human-Computer Collaborative Tasks},
year = {2012},
isbn = {9781450314671},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2388676.2388687},
